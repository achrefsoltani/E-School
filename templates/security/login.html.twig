{% extends 'login.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
<form method="post" class="user">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="form-group">
    <input class="form-control form-control-user"  placeholder="Enter votre username..."  type="text" value="{{ last_username }}" name="username" id="inputUsername"  required autofocus>
    </div>
    <div class="form-group">
    <input type="password" name="password" id="exampleInputPassword" class="form-control form-control-user"  placeholder="Mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
    #}
            <div class="form-check">
            <label>
                <input type="checkbox" name="_remember_me"> se souvenir de moi
            </label>
        </div>


    <button class="btn btn-primary btn-block text-white btn-user" type="submit">Se connecter</button>
    <hr><a class="btn btn-primary btn-block text-white btn-google btn-user" role="button" href="{{ path('compte') }}">S'inscrire</a>
    <hr>
</form>
{% endblock %}
