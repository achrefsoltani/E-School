{% extends 'base.html.twig' %}

{% block title %}Absence index{% endblock %}

{% block body %}
    <h1>Absence index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom  </th>
            <th>Prenom</th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for absence in absences %}
            <tr>
                <td>{{ absence.id }}</td>
                <td>{{ absence.personne.nom }}</td>
                <td>{{ absence.personne.prenom }}</td>

                <td>
                    <a href="{{ path('consulter_absence', {'id': absence.id}) }}">consulter</a>
                    <a href="{{ path('modifier_absence', {'id': absence.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('absence_etudiant_index') }}">chercher</a>
{% endblock %}