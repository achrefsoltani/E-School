{% extends 'base.html.twig' %}

{% block title %}Liste des Notes{% endblock %}

{% block body %}
    <h1>Liste des Notes</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Devoir</th>
            <th>Matiere</th>
            <th>Valeur</th>



        </tr>
        </thead>
        <tbody>
        {% for note in notes %}

                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.devoir }}</td>
                    <td>{{ note.matiere }}</td>
                    <td>{{ note.valeur }}</td>




                </tr>

        {% else %}
            <tr>
                <td colspan="16">Liste vide...</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
{% endblock %}
