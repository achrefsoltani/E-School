{% extends 'base.html.twig' %}

{% block title %}Absence index{% endblock %}

{% block body %}
    <h1>{{ absences[0].debut | date('d-m-Y H') }}H</h1>
<div style="text-align: center">
    <a href="{{ path('absence_index') }}" ><button class="btn btn-info" style="width: 400px">changer la date </button> </a>
</div>

    <div>
        <br>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>numero du seance</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for absence in absences %}
            <tr>
                <td>{{ absence.id }}</td>
                <td>{{ absence.profs.nom }}</td>
                <td>{{ absence.profs.prenom }}</td>
                <td>
                    <a href="{{ path('absence_new', {'idP':absence.profs.id,'idS': absence.id }) }}">Marquer l'absence</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
