{% extends 'base.html.twig' %}

{% block title %}Matiere{% endblock %}

{% block body %}
    <h1>Matiere</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matiere.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ matiere.nom }}</td>
            </tr>
            <tr>
                <th>Coefficient</th>
                <td>{{ matiere.coefficient }}</td>
            </tr>
            <tr>
                <th>Les enseignants</th>
                <td><ul>
                {% for enseignant in matiere.enseignants %}
                    <li><a href='{{ path('personne_show',{'id': enseignant.id}) }}'>{{ enseignant.nom }} {{ enseignant.prenom }}</a></li>
                {% endfor %}
                    </ul></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matiere_index') }}">back to list</a>

    <a href="{{ path('matiere_edit', {'id': matiere.id}) }}">edit</a>

    {{ include('matiere/_delete_form.html.twig') }}
{% endblock %}
