{% extends 'base.html.twig' %}

{% block title %}Liste des {{ role }}s{% endblock %}

{% block body %}
    <h1>Liste des {{ role }}s</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Date_naissance</th>
                <th>Lieu_naissance</th>
                <th>Email</th>
                <th>Num_tel</th>


                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.id }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.sexe }}</td>
                <td>{{ personne.dateNaissance ? personne.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ personne.lieuNaissance }}</td>
                <td>{{ personne.email }}</td>
                <td>{{ personne.numTel }}</td>


                <td>
                    <a href='{{ path('personne_show',{'id': personne.id}) }}'>show</a>
                    <a href="{{ path('personne_edit', {'id': personne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personne_new') }}">Create new</a>
{% endblock %}
