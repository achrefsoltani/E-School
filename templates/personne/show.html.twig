{% extends 'base.html.twig' %}

{% block title %}{{ personne.nom }} {{ personne.prenom }}{% endblock %}

{% block body %}
    <h1>{{ personne.nom }} {{ personne.prenom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ personne.sexe }}</td>
            </tr>
            {%  if (personne.role == 'enseignant') %}
            <tr>
                <th>Matieres</th>
                <td>{% for matiere in personne.matieres %}
                        {{ matiere }}
                    {% endfor %}</td>
            </tr>
            {% endif %}
            {%  if (personne.role == 'eleve') %}
            <tr>
                <th>Niveau</th>
                <td>{{ personne.niveau }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Date_naissance</th>
                <td>{{ personne.dateNaissance ? personne.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu_naissance</th>
                <td>{{ personne.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ personne.cin }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ personne.email }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ personne.numTel }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ personne.adresse }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ personne.role }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ personne.login }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ personne.mdp }}</td>
            </tr>

        </tbody>
    </table>

    <a href="/list/{{ personne.role }}">Retour Ã  la liste</a> <br>

    <a href="{{ path('personne_edit', {'id': personne.id}) }}">Modifier</a>

    {{ include('personne/_delete_form.html.twig') }}
{% endblock %}
