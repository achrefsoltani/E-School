{% extends 'base.html.twig' %}

{% block title %}Liste des compte non confirmé{% endblock %}

{% block body %}
    <h1>Liste des compte non confirmé</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Role</th>



            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.role}}</td>




                <td>
                    <a href='{{ path('comfirmation',{'id': personne.id}) }}'>Confirmé compte </a>
 </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Liste vide...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}