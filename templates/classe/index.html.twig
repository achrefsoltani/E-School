{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nb_eleve</th>
                <th>Capacite</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nom }}</td>
                <td>{{ classe.nbEleve }}</td>
                <td>{{ classe.capacite }}</td>
                <td>{{ classe.niveau }}</td>
                <td>
                    <a href="{{ path('classe_show', {'id': classe.id}) }}">show</a>
                    <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="/classe/niveau">Create new</a>
{% endblock %}
