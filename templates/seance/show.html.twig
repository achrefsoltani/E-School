{% extends 'base.html.twig' %}

{% block title %}Seance{% endblock %}

{% block body %}
    <h1>Seance de la classe {{ seance.classe }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seance.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ seance.debut ? seance.debut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ seance.fin ? seance.fin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>

            <tr>
                <th>Prof</th>
                <td>{{ seance.profs }}</td>
            </tr>

            <tr>
                <th>Salle</th>
                <td>{{ seance.salle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('seance_index') }}">back to list</a>

    <a href="{{ path('seance_edit', {'id': seance.id}) }}">edit</a>

    {{ include('seance/_delete_form.html.twig') }}
{% endblock %}
